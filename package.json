{
  "name": "todolist-autotests",
  "scripts": {
    "test": "playwright test --config=playwright.config.ts --project=todo-list",
    "style:all": "tsc && npm run style:lint && npm run style:prettier",
    "style:lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "style:prettier": "prettier --check 'src/**/*.{js,jsx,ts,tsx}'",
    "make-pretty": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "fix-lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix && npm run style:lint"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@faker-js/faker": "^6.1.2",
    "@playwright/test": "^1.21.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "dotenv": "^16.0.2"
  }
}
